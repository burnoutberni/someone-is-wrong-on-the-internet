{
  "manifest_version": 3,
  "name": "Someone is wrong on the internet!",
  "version": "0.1.0",
  "description": "Automatically detects problematic comments and generates witty AI-powered replies in 9 languages with multiple tone options.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js",
    "scripts": ["src/background.js"]
  },
  "action": { 
    "default_popup": "src/popup.html", 
    "default_title": "Someone is wrong on the internet!",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ]
}
